[user]
    name = Vadim Khitrin
    email = me@vkhitrin.com
[alias]
    graph = log --stat --graph --pretty=fuller --date=relative
    amend = commit --amend
    amendit = commit --amend --no-edit
    adda = add . -A
    puf = push --force
    gitrm = rm --cached -r
    fast-review = "!git adda; git amendit; git review"
    rm-other-branches = "!git branch -l | grep -v '*' | xargs -n1 git branch -D"
    fast-puf = "!git adda; git amendit; git puf"
    rename-branch = branch --move
    github = "!gh"
    gitlab = "!glab"
    rm-branch = branch -D
    update-sub-modules-remote = "submodule update --recursive --remote"
[pull]
    rebase = true
[init]
    defaultBranch = main
[feature]
    manyFiles = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
